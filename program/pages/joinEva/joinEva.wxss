.itemTitle {
  margin-top: 50rpx;
  font-size: 40rpx;
}
.selectBar {
  box-sizing: border-box;
  padding: 40rpx 10rpx;
  height: 150rpx;
  border-radius: 10rpx;
  background-color: #ecf5f6;
  border: 1rpx solid #000;
}
.selectItem {
  display: inline-block;
  margin-right: 30rpx;
  padding: 10rpx 40rpx;
  border: 1rpx solid #000;
  background-color: #fff;
  border-radius: 30rpx;
}
.addItem {
  display: inline-block;
  margin-top: 30rpx;
  padding: 20rpx;
  color: #fff;
  background-color: #44cccc;
  border-radius: 10rpx; 
}

.a {
  color: #fff;
  background-color: #44cccc;
}